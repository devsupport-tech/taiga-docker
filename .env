# Taiga Environment Configuration
# Domain Configuration
TAIGA_DOMAIN=taiga.css1.clientsupport.services
TAIGA_SCHEME=https
WEBSOCKETS_SCHEME=wss
SUBPATH=

# Security - IMPORTANT: Change these in Coolify environment variables!
SECRET_KEY=taiga-secret-key-change-in-coolify
RABBITMQ_ERLANG_COOKIE=secret-erlang-cookie

# Database
POSTGRES_USER=taiga
POSTGRES_PASSWORD=taiga

# RabbitMQ
RABBITMQ_USER=taiga
RABBITMQ_PASS=taiga
RABBITMQ_VHOST=taiga

# Email (console for initial setup, change to smtp in Coolify)
EMAIL_BACKEND=console
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=user
EMAIL_HOST_PASSWORD=password
EMAIL_DEFAULT_FROM=noreply@taiga.css1.clientsupport.services
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Port
TAIGA_PORT=9000

# Features
ENABLE_TELEMETRY=False
PUBLIC_REGISTER_ENABLED=False

# Attachments
ATTACHMENTS_MAX_AGE=360