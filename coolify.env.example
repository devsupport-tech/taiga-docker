# Coolify Environment Variables for Taiga Deployment
# Copy this file to .env in Coolify and configure the values

# === REQUIRED: Change these for production ===
SECRET_KEY=change-this-to-a-very-long-random-string-for-production
POSTGRES_PASSWORD=change-this-to-a-secure-password
RABBITMQ_PASS=change-this-to-a-secure-password
RABBITMQ_ERLANG_COOKIE=change-this-to-a-unique-cookie

# === Domain Configuration ===
# Your Taiga domain (without protocol)
TAIGA_DOMAIN=taiga.yourdomain.com
# Use https for production, http for local testing
TAIGA_SCHEME=https
# Use wss for production (with https), ws for local testing (with http)
WEBSOCKETS_SCHEME=wss
# Leave empty for subdomain deployment, or set to "/taiga" for subpath
SUBPATH=

# === Database Configuration ===
POSTGRES_USER=taiga

# === Email Configuration ===
# Use 'smtp' for production, 'console' for testing (prints emails to logs)
EMAIL_BACKEND=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_DEFAULT_FROM=noreply@yourdomain.com
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# === RabbitMQ Configuration ===
RABBITMQ_USER=taiga
RABBITMQ_VHOST=taiga

# === Port Configuration ===
# Change this if 9000 is already in use
TAIGA_PORT=9000

# === Optional Features ===
# Set to True to enable
ENABLE_TELEMETRY=False
PUBLIC_REGISTER_ENABLED=False

# === OAuth Configuration (Optional) ===
# GitHub OAuth
ENABLE_GITHUB_AUTH=False
GITHUB_API_CLIENT_ID=
GITHUB_API_CLIENT_SECRET=
GITHUB_CLIENT_ID=

# GitLab OAuth
ENABLE_GITLAB_AUTH=False
GITLAB_API_CLIENT_ID=
GITLAB_API_CLIENT_SECRET=
GITLAB_CLIENT_ID=
GITLAB_URL=https://gitlab.com

# === Integration Features (Optional) ===
ENABLE_SLACK=False

# === Importer Features (Optional) ===
ENABLE_GITHUB_IMPORTER=False
GITHUB_IMPORTER_CLIENT_ID=
GITHUB_IMPORTER_CLIENT_SECRET=

ENABLE_JIRA_IMPORTER=False
JIRA_IMPORTER_CONSUMER_KEY=
JIRA_IMPORTER_CERT=
JIRA_IMPORTER_PUB_CERT=

ENABLE_TRELLO_IMPORTER=False
TRELLO_IMPORTER_API_KEY=
TRELLO_IMPORTER_SECRET_KEY=

# === Advanced Settings ===
ATTACHMENTS_MAX_AGE=360